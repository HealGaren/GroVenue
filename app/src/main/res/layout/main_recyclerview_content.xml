<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mainRecyclerHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="강원도 속\n이곳은 어때요?"
                android:textColor="@color/colorAccent"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="좋아하는 것들에 맞춰 강원도에서 만날 수 있는\n여러 곳을 골라보았습니다."
                android:textColor="@color/notSelectedColor"
                android:textSize="14dp" />
        </LinearLayout>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mainRecyclerCardView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="visible"
            app:cardBackgroundColor="#FFF"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mainRecyclerImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#3c3c3c" />
                <View
                    android:background="#66000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mainRecyclerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="준석이네 원조 해장국 24시"
                        android:textColor="#FFF"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/mainRecyclerSubTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500m 이내에 있음, 0033=-234234"
                        android:textColor="#FFF"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="35dp"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#FFF" />

                    <kr.edcan.grovenue.views.CartaTagView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:text="한식"
                        android:textSize="12dp"
                        app:fullMode="true"
                        app:themeColor="#E37272" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>